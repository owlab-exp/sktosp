<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap
PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"
"http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="Person">
<select id="getPerson" resultClass="com.skt.opensocial.wrapper.persistence.shindigmodelsample.PersonImpl">
SELECT
os_id as id,
updated as updated,
aboutMe as aboutMe,
age as age,
birthday as birthday,
gender as gender,
happiestWhen as happiestWhen,
jobInterests as jobInterests
FROM person
WHERE os_id = #id#
</select>

<!-- Use Person object (JavaBean) properties as parameters for insert. Each of the
parameters in the #hash# symbols is a JavaBeans property. -->
<insert id="insertPerson" parameterClass="com.skt.opensocial.wrapper.persistence.shindigmodelsample.PersonImpl">
INSERT INTO
person (os_id, name, birthday, aboutMe)
VALUES (#id#, #name#, #birthday#, #aboutMe#)
</insert>

<!-- Use Person object (JavaBean) properties as parameters for update. Each of the
parameters in the #hash# symbols is a JavaBeans property. -->
<update id="updatePerson" parameterClass="com.skt.opensocial.wrapper.persistence.shindigmodelsample.PersonImpl">
UPDATE person
SET fashion = #fashion#
WHERE os_id = #id#
</update>

<!-- Use Person object (JavaBean) “id” properties as parameters for delete. Each of the
parameters in the #hash# symbols is a JavaBeans property. -->
<delete id="deletePerson" parameterClass="com.skt.opensocial.wrapper.persistence.shindigmodelsample.PersonImpl">
DELETE FROM 
person
WHERE os_id = #id#
</delete>

</sqlMap>