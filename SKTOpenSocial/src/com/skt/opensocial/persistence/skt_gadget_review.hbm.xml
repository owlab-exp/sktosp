<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.skt.opensocial.persistence.GadgetReview" table="SKT_GADGET_REVIEW">
		<id name="id" column="ID">
			<generator class="native"/>
		</id>
		<property name="gadgetId" column="GADGET_ID" />
		<many-to-one name="user" class="com.skt.opensocial.persistence.User" column="USER_ID" not-null="true"/>
		<property name="reviewText" column="REVIEW_TEXT" />
		<property name="reviewGrade" column="REVIEW_GRADE" />
	</class>
</hibernate-mapping>
