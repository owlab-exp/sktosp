<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.skt.opensocial.persistence.MediaItem" table="SHINDIG_ACTIVITIES">
		<id name="id">
			<generator class="native"/>
		</id>
		<property name="mimeType" column="MIMETYPE" />
		<property name="type" column="TYPE" />
		<property name="thumbnailUrl" column="THUMBNAILURL" />
		<property name="activityId" column="ACTIVITY_ID" />

		<property name="url" column="URL" />

	</class>
</hibernate-mapping>
