<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.skt.opensocial.persistence.User" table="SKT_USER">
		<id name="userId" column="ID">
			<!-- generator class="native" /-->
		</id>
		<property name="password" column="PASSWORD" />
		<property name="isDeveloper" column="IS_DEVELOPER" />
		<property name="isAdministrator" column="IS_ADMINISTRATOR" />
		<property name="registeredDate" column="REGISTERED_DATE" />
		<one-to-one name="person" class="com.skt.opensocial.persistence.Person" cascade="all"/>
		<one-to-one name="userVisibility" class="com.skt.opensocial.persistence.UserVisibility" cascade="all"/>
		<set name="reviews" inverse="true"> <!-- reviews by this user -->
			<key column="USER_ID"/>
			<one-to-many class="com.skt.opensocial.persistence.GadgetReview"/>
		</set>
		<set name="gadgets" inverse="true"><!-- for gadgets developed by this user -->
			<key column="DEVELOPER_ID"/>
			<one-to-many class="com.skt.opensocial.persistence.Gadget"/>
		</set>
		<set name="favoriteGadgets" table="SKT_FAVORITE_GADGET"><!-- favorite list of gadgets of this user -->
			<key column="USER_ID"/>
			<many-to-many column="GADGET_ID" class="com.skt.opensocial.persistence.Gadget"/>
		</set>
		<set name="friends" table="SKT_USER_FRIENDS">
			<key column="USERID"/>
			<many-to-many column="FRIENDID" class="com.skt.opensocial.persistence.User"/>
		</set>
	</class>
</hibernate-mapping>